<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BethanysPieShopMobile.LoginWithStackLayout"
             BackgroundImageSource="patternwide.png">
    <ContentPage.Content >
        <StackLayout>
            <Label HorizontalOptions="Center" Text="Welcome to Bethany's Pie Shop"/>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="16" Margin="0,0,0,10" Text="Username:"/>
                <Entry  HorizontalOptions="StartAndExpand" Placeholder="Enter your user name"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Margin="0,0,0,10" FontSize="16" Text="Password:"/>
                <Entry HorizontalOptions="StartAndExpand" Placeholder="Enter your password"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>